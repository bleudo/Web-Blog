<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<%- include("../partials/header.ejs") %>
      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light py-5">Create, Edit or Delete</h1>
            <button class="btn btn-primary" onclick="createNewPost()">New Post</button>
          </div>
        </div>
      </section>
      <section>
        <div class="album py-5 bg-body-tertiary">
            <div class="container">
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% posts.forEach(post => { %>
                <div class="col" data-id="<%= post.id %>">
                  <div class="card shadow-sm">
                    <div class="card text-bg-dark"> 
                      <img class="bd-placeholder-img card-img-top editBtn" src="/images/blur text.gif" alt="DescripciÃ³n de la imagen" width="100%" height="225" style="cursor: pointer;">
                      <div class="card-body">
                        <p class="card-text"><%= post.title %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary ms-1 editBtn">Edit</button>
                            &nbsp; 
                            <button type="button" class="btn btn-sm btn-outline-danger deleteBtn">Delete</button>
                          </div>
                          <small class="card-text ms-3">Last time edited: <br> <%= post.date.toISOString().split('.')[0].replace('T', ' '); %></small>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% }); %>
      </section>
<%- include("../partials/footer.ejs") %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/js/posts.js"></script>
</body>
</html>
